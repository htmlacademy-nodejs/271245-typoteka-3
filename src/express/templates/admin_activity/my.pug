extends ../master.pug

block variables 
  - wrapperClassName = 'wrapper wrapper--nobackground'

block header
  header.header
    a.header__logo.logo(href='#')
      img.logo__image(src='img/icons/logo-image-only.svg' alt='логотип Тайпотеки')
      span.logo__name Типотека
    button.button.button--colored.header__button-new Новая запись
    .header__dropdown
      a.button.button--burger.header__burger(href='#') Открыть меню
      ul.navigation.header__navigation
        li.navigation__item
          a(href='main.html') Пункт меню
        li.navigation__item
          a(href='main.html') Пункт меню
        li.navigation__item
          a(href='main.html') Пункт меню
        li.navigation__item
          a(href='main.html') Пункт меню
    a.header__search.button.button--search(href='#' aria-label='поиск по сайту')

block main
  -
    const formatDate = (dateString) => {
      const date = new Date(dateString);
      return date.toLocaleString([], {year: 'numeric', month: 'numeric', day: 'numeric', hour: '2-digit', minute: '2-digit'});
    }
  main.main-page.main-page--padding
    section.main-page__notes.notes
      h1.notes__title Мои записи
      ul.notes__list
        each article of articles
          li.notes__list-item
            time.notes__item-time(datetime='2019-03-21T20:33') #{formatDate(article.createdAt)}
            a.notes__item-text(href='#') #{article.title}
            button.notes__button.button.button--close-item(type='button')
              span.visually-hidden Закрыть строку списка
